st = "Python"
for i in st:
    print(i)
for i in st:
    print(i, end='\t')

print("-------")
# range (start, stop, step) default start=0 and default step= 1
for i in range(2, 10, 3):
    print(i, end='\n')


# 1-100 arasindaki sayilarin toplamini yazdir
toplam = 0
for i in range(101):
    toplam += i  # or toplam = toplam + i

print(toplam)


# 4 faktoriyeli hesapla
carpim = 1
for i in range(1, 5):
    carpim *= i
print(carpim)

# input kullanicidan al
result = 1
factor = int(input("Faktoriyel sayisini gir: "))
for i in range(1, factor+1):
    result *= i

print(f"Girilen {factor} degerinin sonucu {result} olarak hesaplandi")
